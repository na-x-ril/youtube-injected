{
  "name": "Injector",
  "version": "1.2.5",
  "description": "Customize the Entire Website UIs and Utilities",
  "manifest_version": 3,
  "permissions": ["activeTab", "scripting", "storage", "webRequest"],
  "host_permissions": ["<all_urls>", "https://api-nazlly.vercel.app/*", "http://localhost:3000/*"],
  "action": {
    "default_icon": "images/icon32.jpeg"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "naxr.dev@gmail.com"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "world": "MAIN",
      "js": ["src/youtube/youtube-fixed.js", "libs/odometer/odometer.js"],
      "css": ["src/youtube/youtube-fixed.css", "libs/odometer/odometer.css"],
      "all_frames": true,
      "run_at": "document_start"
    },
    {
      "matches": ["https://www.instagram.com/*"],
      "world": "MAIN",
      "js": ["src/instagram/instagram.js"],
      "all_frames": true,
      "run_at": "document_start"
    },
    {
      "matches": ["https://music.youtube.com/*"],
      "world": "MAIN",
      "js": ["src/yt-music/youtube-m.js"],
      "css": ["src/yt-music/youtube-m.css"],
      "all_frames": true,
      "run_at": "document_start"
    },
    {
      "matches": ["https://*.twitch.tv/*"],
      "js": ["src/twitch/twitch.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["https://id.pinterest.com/*"],
      "css": ["src/pin/pin.css"]
    },
    {
      "matches": ["https://otakudesu.cloud/*"],
      "css": ["src/otakudesu/otakudesu.css"]
    },
    {
      "matches": ["https://www.tiktok.com/*"],
      "js": ["src/tiktok/tiktok-fixed.js"],
      "world": "MAIN",
      "css": ["src/tiktok/tiktok-fixed.css"],
      "all_frames": true
    },
    {
      "matches": ["https://*.samehadaku.email/*"],
      "css": ["src/samehadaku/samehadaku.css"]
    }
  ]
}
